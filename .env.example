# Scrapee Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI Backend Configuration
# =============================================================================

# Gemini API Key (required for AI summarization)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# AI Backend Port (default: 3001)
AI_BACKEND_PORT=3001

# Node environment (development, production)
NODE_ENV=production

TURNSTILE_REQUIRED=true

# =============================================================================
# Arachne Scraper Configuration
# =============================================================================

# Arachne API Port (default: 8080)
ARACHNE_PORT=8080

# Redis Configuration
ARACHNE_REDIS_ADDR=redis:6379
ARACHNE_REDIS_DB=0

# Metrics and Logging
ARACHNE_ENABLE_METRICS=true
ARACHNE_ENABLE_LOGGING=true
ARACHNE_LOG_LEVEL=info

# Scraping Performance
ARACHNE_MAX_CONCURRENT=5
ARACHNE_REQUEST_TIMEOUT=120s
ARACHNE_TOTAL_TIMEOUT=180s

# Headless Browser Configuration
ARACHNE_USE_HEADLESS=true
ARACHNE_HEADLESS_NO_SANDBOX=true

# User Agent
ARACHNE_USER_AGENT=Mozilla/5.0 (compatible; PortfolioBot/1.0)

# Rate Limiting
ARACHNE_RATE_LIMIT=2
ARACHNE_RATE_LIMIT_WINDOW=1s

# =============================================================================
# Redis Configuration
# =============================================================================

# Redis Port (default: 6379)
REDIS_PORT=6379

# Redis Memory Management
REDIS_MAX_MEMORY=512mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# Redis Commander UI Port (default: 8081)
REDIS_COMMANDER_PORT=8081

# =============================================================================
# Frontend Configuration
# =============================================================================

# Frontend Port (default: 3000)
FRONTEND_PORT=3000

# =============================================================================
# Additional Configuration (Optional)
# =============================================================================

# Anthropic API Key (if you're using Claude)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
